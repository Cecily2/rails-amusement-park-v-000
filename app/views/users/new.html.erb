<%= form_for(@user) do |f| %>
  
    <div class="field"> <%= f.label :name %><br>
    <%= f.text_field :name %></div>
  
    <div class="field"> <%= f.label :password %><br>
      <%= f.password_field :password %></div>  

    <div class="field"><label for="height">Height (in inches)</label><br>
    <%= f.text_field :height %></div>
  
    <div class="field"><label for="happiness">How happy are you? (1-5 scale)</label><br>
    <%= f.text_field :happiness %></div>
  
    <div class="field"><label for="nausea">How nauseous are you? (1-5 scale)</label><br>
    <input id="nausea" name="user[nausea]" type="number"></div>
  
    <div class="field"><label for="tickets">How many dollars are in your pocket?</label><br>
    <%= f.text_field :tickets %></div>
  
    <div class="field">
      <label for="admin">Check box if you are a theme park owner</label>
      <%= f.check_box :admin %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>