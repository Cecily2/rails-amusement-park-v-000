<ul>

  <% @attractions.each do |a| %>
  <li>
    <strong><%= a.name %></strong><br>
    <% if current_user.admin %>
      <%= link_to "Show #{a.name}", attraction_path(a) %>
    <% else %>
      <%= link_to "Go on #{a.name}", attraction_path(a) %>
    <% end %>
  </li>
  <% end %>

</ul>


<%= link_to "New Attraction", new_attraction_path if current_user.admin %>  <br>
